<hydraDef>

  <itemDef name="Task_Enable" type="dn8b" value="0x01"/>
  <itemDef name="Task_Disable" type="dn8b" value="0x00"/>


  <command name="Ping" decoder="cmdDecoder">
    <header frame="PingCommand_Header"/>
    <description text="Ping command to test basic working of the CDH"/>
    <field>
      <itemDef name="Ping_OpCode" type="dn8" value="1"/>
    </field>
  </command>

  <!-- Commands to enable/disable/run tasks with specific task IDs -->
  <command name="EnableDisableTask" decoder="cmdDecoder">
    <header frame="RunHkTaskCommand_Header"/>
    <description text="Command to enable or disable task based on task ID"/>
    <field>
      <itemDef name="EnableDisableTaskID_Opcode" type="dn8b" value="0x0A"/>
      <argument id="TaskID" type="dn8b"/>
      <argument id="EnableDisable" type="dn8b"/>
    </field>
  </command>

  <command name="RunEpsHkTask" decoder="cmdDecoder">
    <header frame="RunHkTaskCommand_Header"/>
    <description text="Command to run EPS hk task"/>
    <field>
      <itemDef name="RunEPSHkTask_Opcode" type="dn8b" num="4" value="0x08 0x41 0x01 0x01"/>
    </field>
  </command>

  <command name="RunProcCompRoutineTask" decoder="cmdDecoder">
    <header frame="RunHkTaskCommand_Header"/>
    <description text="Command to run Processor Companion routine task"/>
    <field>
      <itemDef name="RunProcCompRoutineTask_Opcode" type="dn8b" num="4" value="0x08 0x3B 0x01 0x01"/>
    </field>
  </command>

  <command name="RunThrusterHkTask" decoder="cmdDecoder">
    <header frame="RunHkTaskCommand_Header"/>
    <description text="Command to run Thruster hk task"/>
    <field>
      <itemDef name="RunThrusterHkTask_Opcode" type="dn8b" num="4" value="0x08 0x4C 0x01 0x01"/>
    </field>
  </command>

  <command name="EnableAntennaDeploymentTask" decoder="cmdDecoder">
    <header frame="RunHkTaskCommand_Header"/>
    <description text="Command to enable antenna deployment task"/>
    <field>
      <item name="EnableDisableTaskID_Opcode"/>
      <itemDef name="AntennaDeploymentTaskID" type="dn8b" value="0x44"/>
      <item name="Task_Enable"/>
    </field>
  </command>

  <command name="DisableAntennaDeploymentTask" decoder="cmdDecoder">
    <header frame="RunHkTaskCommand_Header"/>
    <description text="Command to disable antenna deployment task"/>
    <field>
      <item name="EnableDisableTaskID_Opcode"/>
      <item name="AntennaDeploymentTaskID"/>
      <item name="Task_Disable"/>
    </field>
  </command>

  <command name="EnableSP1DeploymentTask" decoder="cmdDecoder">
    <header frame="RunHkTaskCommand_Header"/>
    <description text="Command to enable solar panel 1 deployment task"/>
    <field>
      <item name="EnableDisableTaskID_Opcode"/>
      <itemDef name="SP1DeploymentTaskID" type="dn8b" value="0x48"/>
      <item name="Task_Enable"/>
    </field>
  </command>

  <command name="DisableSP1DeploymentTask" decoder="cmdDecoder">
    <header frame="RunHkTaskCommand_Header"/>
    <description text="Command to disable solar panel 1 deployment task"/>
    <field>
      <item name="EnableDisableTaskID_Opcode"/>
      <item name="SP1DeploymentTaskID"/>
      <item name="Task_Disable"/>
    </field>
  </command>

  <command name="EnableSP2DeploymentTask" decoder="cmdDecoder">
    <header frame="RunHkTaskCommand_Header"/>
    <description text="Command to enable solar panel 2 deployment task"/>
    <field>
      <item name="EnableDisableTaskID_Opcode"/>
      <itemDef name="SP2DeploymentTaskID" type="dn8b" value="0x49"/>
      <item name="Task_Enable"/>
    </field>
  </command>

  <command name="DisableSP2DeploymentTask" decoder="cmdDecoder">
    <header frame="RunHkTaskCommand_Header"/>
    <description text="Command to disable solar panel 2 deployment task"/>
    <field>
      <item name="EnableDisableTaskID_Opcode"/>
      <item name="SP2DeploymentTaskID"/>
      <item name="Task_Disable"/>
    </field>
  </command>

  <command name="EnableSP3DeploymentTask" decoder="cmdDecoder">
    <header frame="RunHkTaskCommand_Header"/>
    <description text="Command to enable solar panel 3 deployment task"/>
    <field>
      <item name="EnableDisableTaskID_Opcode"/>
      <itemDef name="SP3DeploymentTaskID" type="dn8b" value="0x4A"/>
      <item name="Task_Enable"/>
    </field>
  </command>

  <command name="DisableSP3DeploymentTask" decoder="cmdDecoder">
    <header frame="RunHkTaskCommand_Header"/>
    <description text="Command to disable solar panel 3 deployment task"/>
    <field>
      <item name="EnableDisableTaskID_Opcode"/>
      <item name="SP3DeploymentTaskID"/>
      <item name="Task_Disable"/>
    </field>
  </command>


</hydraDef>
