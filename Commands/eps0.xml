<hydraDef>

  <!-- Enable commands for transceiver enables related to EPS -->
  <command name="SetPSENTREN" decoder="cmdDecoder">
    <header frame="SetGPIOCommand_Header"/>
    <output name="instance" value="#TRANSCEIVER_ENABLES_GPIO_INSTANCE"/>
    <output name="pin"      value="#PSEN_TREN"/>
    <output name="state"    value="#GPIO_ON"/>
    <description text="Set transceiver enable GPIO for power supply enables"/>
  </command>

  <command name="SetEPSI2C1EN" decoder="cmdDecoder">
    <header frame="SetGPIOCommand_Header"/>
    <output name="instance" value="#TRANSCEIVER_ENABLES_GPIO_INSTANCE"/>
    <output name="pin"      value="#EPS_I2C_0_TREN"/>
    <output name="state"    value="#GPIO_ON"/>
    <description text="Set transceiver enable GPIO for EPS I2C 0 bus"/>
  </command>

  <command name="SetEPSI2C2EN" decoder="cmdDecoder">
    <header frame="SetGPIOCommand_Header"/>
    <output name="instance" value="#TRANSCEIVER_ENABLES_GPIO_INSTANCE"/>
    <output name="pin"      value="#EPS_I2C_1_TREN"/>
    <output name="state"    value="#GPIO_ON"/>
    <description text="Set transceiver enable GPIO for EPS I2C 1 bus"/>
  </command>

  <command name="SetEPSI2C3EN" decoder="cmdDecoder">
    <header frame="SetGPIOCommand_Header"/>
    <output name="instance" value="#TRANSCEIVER_ENABLES_GPIO_INSTANCE"/>
    <output name="pin"      value="#EPS_I2C_2_TREN"/>
