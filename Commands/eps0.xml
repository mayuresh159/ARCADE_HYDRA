    <description text="Set transceiver enable GPIO for EPS I2C 2 bus"/>
  </command>

  <command name="SetEPSI2CRESET" decoder="cmdDecoder">
    <header frame="SetGPIOCommand_Header"/>
    <output name="instance" value="#POWER_SUPPLY_ENABLES_GPIO_INSTANCE"/>
    <output name="pin"      value="#EPS_I2C_RESET_PIN"/>
    <output name="state"    value="#GPIO_ON"/>
    <description text="Set (active low) power supply enable GPIO to reset EPS I2C buses"/>
  </command>

  <command name="ClearEPSI2CRESET" decoder="cmdDecoder">
    <header frame="SetGPIOCommand_Header"/>
    <output name="instance" value="#POWER_SUPPLY_ENABLES_GPIO_INSTANCE"/>
    <output name="pin"      value="#EPS_I2C_RESET_PIN"/>
    <output name="state"    value="#GPIO_OFF"/>
    <description text="Clear (active low) power supply enable GPIO to reset EPS I2C buses"/>
  </command>


